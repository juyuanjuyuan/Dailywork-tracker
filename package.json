{
  "name": "ai-work-tracker",
  "version": "1.0.0",
  "description": "AI 驱动的工作行为监控与日志生成系统",
  "private": true,
  "author": "AI Work Tracker",
  "license": "MIT",
  "main": "electron/main.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "pnpm build && electron-builder",
    "electron:compile": "tsc -p electron/tsconfig.json"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "0.1.5",
    "@radix-ui/react-dropdown-menu": "0.1.4",
    "@radix-ui/react-tabs": "0.1.4",
    "@reach/skip-nav": "0.12.1",
    "@react-aria/button": "^3.9.4",
    "@react-aria/dialog": "^3.5.13",
    "@react-aria/focus": "^3.17.0",
    "@react-aria/overlays": "^3.22.0",
    "@react-stately/overlays": "^3.6.6",
    "@supabase/supabase-js": "^2.45.0",
    "@vercel/speed-insights": "^1.3.1",
    "classnames": "2.5.1",
    "date-fns": "3.6.0",
    "next": "^14.2.3",
    "nprogress": "0.2.0",
    "react": "^18.3.1",
    "react-aria": "3.32.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "swr": "2.2.5"
  },
  "devDependencies": {
    "@types/classnames": "2.3.1",
    "@types/node": "20.12.7",
    "@types/nprogress": "0.2.3",
    "@types/reach__skip-nav": "0.1.3",
    "@types/react": "18.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.38",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-hover-media-feature": "1.0.2",
    "postcss-preset-env": "9.5.9",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "5.4.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aiworktracker.app",
    "productName": "AI Work Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40"
}
